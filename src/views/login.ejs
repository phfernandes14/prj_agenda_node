<!doctype html>
<html lang="pt-br">

<head>
  <%- include('includes/head')%>
  <title>Login | Agenda - NodeJS</title>
</head>

<body>

  <!--Navbar-->
  <%- include('includes/navbar')%>

    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3">
          <h1 class="text-center my-3">Criar Conta ou Entrar</h1>
          <p class="text-center lead">Faça Login ou Crie sua Conta Abaixo... </p>
          <hr class="my-4">

          <!--Retorno Errors-->
          <%- include('includes/messages')%>

            <div class="row">

              <!--Cadastro-->
              <div class="col-lg mt-5">
                <h4 class="text-center">Faça seu Cadastro</h4>
                <p class="text-center lead">
                  <small>Se você não possui conta, preencha o formulário abaixo:</small>
                </p>
                <form action="/login/register" method="POST" class="myclass">
                  <input type="hidden" name="_csrf" value=<%=csrfToken %>>
                  <div class="form-group">
                    <label class="p-2 fw-bold">Email</label>
                    <input type="email" class="form-control" placeholder="Digite seu email..." name="email">
                  </div>
                  <div class="form-group">
                    <label class="p-2 fw-bold">Senha</label>
                    <input type="password" class="form-control" placeholder="Digite sua senha..." name="password">
                  </div>
                  <button type="submit" class="btn btn-success mt-3 fw-bold" id="btnCadastrar"><i
                      class="ti ti-arrow-autofit-right"></i> Cadastrar</button>
                </form>
              </div>

              <!--Login-->

              <div class="col-lg mt-5">
                <h4 class="text-center">Fazer Login</h4>
                <p class="text-center lead"><small>Se você já possui conta, faça login no formulário abaixo:</small></p>
                <form action="/login/login" method="POST">
                  <input type="hidden" name="_csrf" value=<%=csrfToken %>>
                  <div class="form-group">
                    <label class="p-2 fw-bold">Email</label>
                    <input type="email" class="form-control" placeholder="Digite seu email..." name="email">
                  </div>
                  <div class="form-group">
                    <label class="p-2 fw-bold">Senha</label>
                    <input type="password" class="form-control" placeholder="Digite sua senha..." name="password">
                  </div>
                  <button type="submit" class="btn btn-primary fw-bold mt-3"> <i class="ti ti-arrow-bar-right"></i>
                    Fazer Login</button>
                </form>
              </div>
            </div>
        </div>
        <div class="col-lg-2"></div>
      </div>
    </div>

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
    <!--
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
    -->
    <!--Meu bundle-->
    <script src="./assets/js/bundle.js"></script>
</body>

</html>